<UserControl x:Class="Blackjack.Views.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blackjack.Views" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <local:HandControl></local:HandControl>

        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="BtnHit" Content="Hit" Width="100" Margin="5,0" Command="{Binding Hit}"/>
            <Button x:Name="BtnStand" Content="Stand" Width="100" Margin="5,0" Command="{Binding Stand}"/>
        </WrapPanel>
    </Grid>
</UserControl>
